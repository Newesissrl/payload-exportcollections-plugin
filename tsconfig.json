{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react"
  },
  "include": ["src/"],
  "exclude": ["node_modules", "dist", "build"],
  "ts-node": {
    "transpileOnly": true
  }
}
